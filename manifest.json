{
  "manifest_version": 3,
  "name": "PanicCheck â€“ Fear-Monger Detector",
  "version": "1.0.0",
  "description": "Detects when media is fear-mongering without evidence. Slaps big red warnings on panic porn.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.tavily.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "PanicCheck"
  }
}
